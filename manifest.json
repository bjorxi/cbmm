{
  "manifest_version": 3,
  "name": "cbmm",
  "description": "Ultimate Chrome bookmarks manager",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "cbmm-48.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/index.js"]
    }
  ],
  "permissions": [
    "bookmarks",
    "activeTab",
    "storage"
  ]
}
